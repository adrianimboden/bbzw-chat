{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ],
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true
  }
}
